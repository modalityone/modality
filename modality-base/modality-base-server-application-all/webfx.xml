<?xml version="1.0" encoding="UTF-8"?>
<project>

    <description>Convenient module that embeds all server modules of the Base layer.</description>

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>

        <!-- Allowing configuration variables from file (conf folder) & system properties (ex: user.dir) in executables (Vert.x) -->
        <plugin-module>webfx-platform-conf-file-java</plugin-module>
        <plugin-module>webfx-platform-substitution-var-conf</plugin-module>
        <plugin-module>webfx-platform-substitution-var-sysprop</plugin-module>

        <plugin-module>modality-base-server-application-min</plugin-module>

        <!-- Facebook SSO -->
        <plugin-module>webfx-stack-authn-login-server-gateway-facebook</plugin-module>
        <plugin-module>webfx-stack-authn-server-gateway-facebook</plugin-module>

        <!-- Google SSO -->
        <plugin-module>webfx-stack-authn-login-server-gateway-google</plugin-module>
        <plugin-module>webfx-stack-authn-server-gateway-google</plugin-module>

        <!-- MojoAuth SSO -->
        <plugin-module>webfx-stack-authn-login-server-gateway-mojoauth</plugin-module>
        <plugin-module>webfx-stack-authn-server-gateway-mojoauth</plugin-module>

    </dependencies>

</project>