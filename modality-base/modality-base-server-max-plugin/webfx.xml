<?xml version="1.0" encoding="UTF-8"?>
<project>

    <description>Convenient module that embeds all server modules of the Base layer.</description>

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>

        <!-- Allowing configuration variables from file (conf folder) & system properties (ex: user.dir) in executables (Vert.x) -->
        <plugin-module>webfx-platform-conf-file-java-plugin</plugin-module>
        <plugin-module>webfx-platform-substitution-var-conf-plugin</plugin-module>
        <plugin-module>webfx-platform-substitution-var-sysprop-plugin</plugin-module>

        <!-- Min -->
        <plugin-module>modality-base-server-min-plugin</plugin-module>

        <!-- + Facebook SSO -->
        <plugin-module>webfx-stack-authn-login-server-gateway-facebook-plugin</plugin-module>
        <plugin-module>webfx-stack-authn-server-gateway-facebook-plugin</plugin-module>

        <!-- + Google SSO -->
        <plugin-module>webfx-stack-authn-login-server-gateway-google-plugin</plugin-module>
        <plugin-module>webfx-stack-authn-server-gateway-google-plugin</plugin-module>

        <!-- + MojoAuth SSO -->
        <plugin-module>webfx-stack-authn-login-server-gateway-mojoauth-plugin</plugin-module>
        <plugin-module>webfx-stack-authn-server-gateway-mojoauth-plugin</plugin-module>

    </dependencies>

</project>