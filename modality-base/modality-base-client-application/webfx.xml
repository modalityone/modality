<?xml version="1.0" encoding="UTF-8"?>
<project>

    <description>Define a generic Modality JavaFX application (common code to the back-office and front-office).</description>

    <properties>
        <show-loading-spinner-on-startup>true</show-loading-spinner-on-startup>
    </properties>

    <exported-packages>
        <source-packages/>
        <resource-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules>
            <module transitive="true">webfx-stack-orm-domainmodel-activity</module> <!-- for Activity in constructor -->
            <module transitive="true">webfx-stack-routing-activity</module> <!-- for Activity in constructor -->
            <module transitive="true">webfx-platform-util</module> <!-- for Factory in constructor -->
            <undetected-module>javafx-controls</undetected-module>
        </used-by-source-modules>

        <resource-module>modality-base-client-css</resource-module>
        <plugin-module>modality-base-client-busconfig</plugin-module>

        <plugin-module executable-target="java">modality-base-client-navigationarrows-java</plugin-module>
        <plugin-module>modality-base-client-i18n</plugin-module>
        <plugin-module>modality-crm-client-authz</plugin-module>
        <plugin-module>modality-base-client-operationactionsloading</plugin-module>
        <plugin-module>modality-crm-client-activities-login</plugin-module>
        <plugin-module>modality-crm-client-activities-unauthorized</plugin-module>
        <plugin-module>webfx-stack-authn-login-ui-gateway-facebook</plugin-module>
        <plugin-module>webfx-stack-authn-login-ui-gateway-google</plugin-module>
        <plugin-module>webfx-stack-authn-login-ui-gateway-mojoauth</plugin-module>
        <plugin-module>webfx-stack-authn-login-ui-gateway-password</plugin-module>
        <plugin-module>webfx-stack-push-client-simple</plugin-module>
        <plugin-module>webfx-stack-db-querypush-client-simple</plugin-module>
    </dependencies>

</project>