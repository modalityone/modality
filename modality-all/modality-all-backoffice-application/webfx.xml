<?xml version="1.0" encoding="UTF-8"?>
<project applicationId="one.modality.backoffice" applicationLabel="Modality BackOffice">

    <description>The Modality Back-Office application (cross-platform non-executable module).</description>

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>

        <!-- Allow configuration variables from environment in Java executables (OpenJFX or Gluon) -->
        <plugin-module executable-target="java">webfx-platform-substitution-var-env</plugin-module>
        <!-- Allow configuration variables from local storage in GWT executables -->
        <plugin-module executable-target="gwt">webfx-platform-substitution-var-localstorage</plugin-module>
        <plugin-module executable-target="gwt">webfx-platform-substitution-var-windowlocation</plugin-module>

        <plugin-module>modality-base-backoffice-application</plugin-module>

        <!-- Base activities -->
        <plugin-module>modality-base-backoffice-activities-all</plugin-module>

        <!-- CRM activities -->

        <!-- Ecommerce activities -->
        <plugin-module>modality-ecommerce-backoffice-activities-all</plugin-module>

        <!-- Hotel activities -->
        <plugin-module>modality-hotel-backoffice-activities-all</plugin-module>

        <!-- Event activities -->

        <!-- Catering activities -->
        <plugin-module>modality-catering-backoffice-activities-all</plugin-module>

    </dependencies>

</project>