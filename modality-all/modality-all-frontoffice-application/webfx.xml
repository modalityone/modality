<?xml version="1.0" encoding="UTF-8"?>
<project applicationId="one.modality.frontoffice" applicationLabel="Modality FrontOffice">

    <description>The Modality Front-Office application (cross-platform non-executable module).</description>

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>

        <!-- Allow configuration variables from environment in Java executables (OpenJFX or Gluon) -->
        <plugin-module executable-target="java">webfx-platform-substitution-var-env</plugin-module>
        <!-- Allow configuration variables from local storage in GWT executables -->
        <plugin-module executable-target="gwt">webfx-platform-substitution-var-localstorage</plugin-module>
        <plugin-module executable-target="gwt">webfx-platform-substitution-var-windowlocation</plugin-module>

        <plugin-module>modality-base-frontoffice-application</plugin-module>

        <!-- Event activities -->
        <plugin-module>modality-event-frontoffice-activities-booking</plugin-module>
        <plugin-module>modality-base-frontoffice-activities-alerts</plugin-module>
        <plugin-module>modality-base-frontoffice-activities-account</plugin-module>


    </dependencies>

</project>